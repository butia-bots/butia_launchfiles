<launch>
    <include file="$(find butia_launchfiles)/launch/doris_description.launch">
        <arg name="use_arm" value="false"/>
    </include>

    <include file="$(find butia_navigation_launchfiles)/navigate-doris-base.launch"/>
    
    <machine
        name="jetson"
        address="jetson"
        env-loader="/opt/ros/melodic/env_jetson.sh"
        default="false"
        user="jetson"
    />
    <include file="$(find butia_vision_launchfiles)/object_recognition.launch">
        <arg name="machine" value="jetson"/>
        <arg name="i2k_machine" value="localhost"/>
        <arg name="or_config_file" value="object_recognition-sim.yaml"/>
    </include>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find butia_launchfiles)/rviz/navigate_vision.rviz"/>
</launch>